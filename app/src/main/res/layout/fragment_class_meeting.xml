<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_class_meeting">

    <ImageView
        android:id="@+id/class_meeting_image"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/class_meeting_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvListMeeting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_meeting_image" />

    <TextView
        android:id="@+id/fragment_class_meeting_title"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".85"
        android:layout_height="50dp"
        android:text="Họp lớp online"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/bar"
        android:textColor="#fff"
        android:textAllCaps="true"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddNewClass"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".15"
        android:layout_height="50dp"
        android:background="@drawable/bar"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="+"
        android:textAllCaps="true"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_class_meeting_title"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>